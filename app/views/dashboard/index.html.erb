<h1 class="big-header text-primary">DASHBOARD</h1>
<div class="row">
  <div class="col-md-6 col-lg-4 ">
    <div class="font-1-2">
        <% if current_user %>
            <div class="notice notice-info">
               <div class="row">
                   <%= image_tag("iconschool.png",class: "col img-icon") %>     
                   <div class="col">
                       <p><strong><%= current_user.school.ministry_code %></strong></p>
                       <p><strong><%= t('val.school')%><%= current_user.school.school_name %></strong></p>
                       <p><%= t('val.distric')%>  <strong><%= current_user.school.district %></strong></p>
                       <p><%= t('val.province')%>  <strong><%= current_user.school.province %></strong></p>
                   </div>
               </div>
               <hr class="my-4">
            <div class="row">
                   <%= image_tag("user.png",class: "col img-icon") %>     
                   <div class="col">
                       <h4><%= t('val.studentcount') %></h4>
                       <h1 class="text-danger"><%= number_with_delimiter(current_user.school.students_count, :delimiter => ',')%>  <%= t('val.userpostscript') %></h1>
                        
                   </div>
               </div>
            </div>
            <div class="notice notice-info">
                <div class="form-group">
                   <strong><h4 class="text-dark"><u><%= t('val.userinfo') %></u></h4>
                   <p class="text-primary"><%= current_user.prefix %><%= current_user.name %>  <%= current_user.surname %></p>
                   <p class="text-primary"><%= current_user.cardnumber %></p>
                   </strong>
                   <p><%= t('val.position') %>  <%= current_user.position %></p>
                   <p><strong><%= t('val.lastlogin') %> <%=@userlogintime%></strong></p>
                 </div> 
                 <div class="form-group row">
                     <div class="col ">
                        <%= link_to t('val.editprofile'), edit_user_registration_path, method: "get" ,class: "btn btn-pink"%>
                    </div>
                    <div class="col text-right">
                        <%= link_to t('val.signout'), destroy_user_session_path, method: "delete" ,class: "btn btn-primary"%>
                    </div>
                 </div>
                 <p><strong><%= t('val.contactadmin') %> <u><%= t('val.adminemail')%></u></strong></p>
            </div> 
      <% end %>  
    </div>
  </div>
  <div class="col-md-6 col-lg-8 h5 text-primary">
      <div class="row arrow-border">
            <div class="col-md-3 text-center pt-5">
                <div class="bar-active-border">
                       <div class="bar bg-white">
                          <span class="bar-prec-box"><span class="bar-prec"><%= format('%.2f',@percentall)%></span><span>%</span></span>
                      </div>
                </div>
                <h2>ภาพรวม</h2>
            </div>
            <div class="col-md-9 text-center">
                <div class="row">
                    <div class="form-group col-12"><h4><%= t('val.pleaseclick')%></h4></div>
                    <%= render partial: "percentcircle" , locals: {link_path: musicteacher_path,link_view_path: musicteacherview_path,percent: @percentform1 ,headtext: t('val.form1head')} %>
                    <%= render partial: "percentcircle" , locals: {link_path: thaimusic_path,link_view_path: thaimusicview_path,percent: @percentform2 ,headtext: t('val.form2head')} %>
                    <%= render partial: "percentcircle" , locals: {link_path: intermusic_path,link_view_path: intermusicview_path,percent: @percentform3 ,headtext: t('val.form3head')} %>
                    <%= render partial: "percentcircle" , locals: {link_path: folkmusic_path,link_view_path: folkmusicview_path,percent: @percentform4 ,headtext: t('val.form4head')} %>
                </div>
            </div>
        </div>  
  </div>
</div>  
