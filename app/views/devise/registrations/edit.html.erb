<h1 class="big-header text-info"><%= t('val.headedituse') %></h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, validate: true) do |f| %>
        <%= f.error_notification %>
        <div class="card border-0 col-md-7">
            <div class="card-body">
               <div class="notice notice-info">
                 <p class="h3"><strong><%= t('val.school')%><%= current_user.school.school_name %></strong></p>
               </div>
               <div class="notice">
                  <div class="form-group row">
                      <div class="col-sm-4">
                         <%= f.input :prefix , required: true,:label => false,input_html: {class: "form-control" },placeholder: "#{t('val.users.prefix')}*", validate: true%>
                      </div>
                      <div class="col-sm-8">
                          <%= f.input :name ,:label => false ,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.name')}*"%>
                      </div>
                  </div>
                  <div class="form-group">
                       <%= f.input :surname ,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.surname')}*"%>
                  </div>
                  <div class="form-group">
                       <%= f.input :cardnumber,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.cardnumber')}*"%>
                  </div>
                  <div class="form-group">
                       <%= f.input :position,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.position')}*"%>
                  </div>
                  <div class="form-group">
                       <%= f.input :phone,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.phone')}*"%>
                  </div>
                  <div class="form-group">
                       <%= f.input :email,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.email')}*"%>
                  </div>
                </div>  
                <div class="notice notice-info">
                      <p class="h4"><%= t('val.addsignuserandpass') %></p>
                      <div class="form-group">
                         <%= f.input :username,:label => false ,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.username')}*"%>
                      </div>
                      <div class="form-group">
                          <%= f.input :password, autocomplete: "off",:label => false, hint: "leave it blank if you don't want to change it",input_html: {class: "form-control" } ,placeholder: "#{t('val.users.password')}", required: false %>
                      </div>
                      <div class="form-group">
                          <%= f.input :password_confirmation, required: false, hint: "leave it blank if you don't want to change it",:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.password_confirmation')}" %>
                     </div>
                      
                 </div>  
                 <div class="notice notice-warning">
                    <div class="form-group">
                          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true ,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.current_confirmation')}"  %>
                      </div>
                 </div> 
            </div>
            <div class="card-footer border-0 bg-white row">
                 <div class="col text-left">
                    <%= link_to t('val.banktodashboard'), root_path, method: :get ,class: "btn btn-danger btn-lg fox-shadow--8dp"%> 
                 </div>
                 <div class="col">
                   <%= f.button :submit, t('val.upddatetext') , class:  "btn btn-success  btn-lg form-control  box-shadow--8dp" %>
                 </div>
                 
            </div>
        </div>
  <% end %>