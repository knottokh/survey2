<h1 class="big-header text-info"><%= t('val.headersignup') %></h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "" ,error_class: "error"}, validate: true) do |f| %>
        <%= f.error_notification %>
        <div class="card-group">
            <div class="card border-0 ">
              <div class="card-body">
                  <div class="form-group">
                      <%= f.input :school_id, collection: [], label_method: :second, value_method: :first ,:label => false , validate: true%>
                  </div>
                  <div class="form-group">
                     <h5 class="text-danger"><%= t('val.privatehead') %></h5>
                      <p class="text-info"><%= t('val.private1')%></p>
                      <p class="text-info">
                          <span><%= t('val.private21')%></span>
                          <u class="text-danger"><%= t('val.private221')%></u>
                          <u class="text-danger"><%= t('val.private222')%></u>
                          <span><%= t('val.private23')%></span>
                          <u class="text-danger"><%= t('val.private24')%></u>
                          <span><%= t('val.private25')%></span>
                      </p>
                  </div>
              </div>
              <div class="card-footer border-0 bg-white">
                  <div class="col">
                          <%= link_to t('val.backtosignin'), new_user_session_path, method: "get" ,class: "btn btn-danger btn-lg fox-shadow--8dp"%> 
                  </div>
              </div>
            </div>
            <div class="card border-0 ">
              <div class="card-body">
                  <div class="form-group row">
                      <div class="col-sm-4">
                         <%= f.input :prefix , required: true,:label => false,input_html: {class: "form-control" },placeholder: "#{t('val.users.prefix')}*", validate: true%>
                      </div>
                      <div class="col-sm-8">
                          <%= f.input :name ,:label => false ,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.name')}*"%>
                      </div>
                  </div>
                  <div class="form-group">
                       <%= f.input :surname ,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.surname')}*"%>
                  </div>
                  <div class="form-group">
                       <%= f.input :cardnumber,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.cardnumber')}*"%>
                  </div>
                  <div class="form-group">
                       <%= f.input :position,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.position')}*"%>
                  </div>
                  <div class="form-group">
                       <%= f.input :phone,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.phone')}*"%>
                  </div>
                  <div class="form-group">
                       <%= f.input :email,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.email')}*"%>
                  </div>
                  <div class="notice notice-info">
                        <p class="h4"><%= t('val.addsignuserandpass') %></p>
                        <div class="form-group">
                           <%= f.input :username,:label => false ,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.username')}*"%>
                        </div>
                        <div class="form-group">
                            <%= f.input :password,:label => false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),input_html: {class: "form-control" } ,placeholder: "#{t('val.users.password')}*" %>
                        </div>
                        <div class="form-group">
                            <%= f.input :password_confirmation,:label => false,input_html: {class: "form-control" } ,placeholder: "#{t('val.users.password_confirmation')}*" %>
                       </div>
                   </div>  
              </div>
              <div class="card-footer border-0 bg-white">
                   <%= f.button :submit, t('val.signupconfirm') , class:  "btn btn-success  btn-lg form-control  box-shadow--8dp" %>
              </div>
            </div>
         </div>    
  <% end %>
